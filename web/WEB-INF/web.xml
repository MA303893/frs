<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Flights</servlet-name>
        <jsp-file>/flight/flights.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>FlightsController</servlet-name>
        <servlet-class>controller.FlightsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Flights</servlet-name>
        <url-pattern>/flights.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Flights</servlet-name>
        <url-pattern>/flights</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FlightsController</servlet-name>
        <url-pattern>/flights/view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FlightsController</servlet-name>
        <url-pattern>/flights/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FlightsController</servlet-name>
        <url-pattern>/flights/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FlightsController</servlet-name>
        <url-pattern>/flights/new</url-pattern>
    </servlet-mapping>
</web-app>